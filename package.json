{
    "name": "fullstack-challenge",
    "version": "0.1.2",
    "description": "Code challenge part of our hiring process",
    "main": "index.js",
    "scripts": {
        "start": "parcel -p 6675 index.html",
        "build": "parcel build index.html --no-minify --no-source-maps --no-cache",
        "clean": "rm -rf dist/*; rm -rf .cache",
        "gendocs": "jsdoc -r -c .jsdoc.json src",
        "prettify": "prettier --write src",
        "lint": "eslint --fix src; stylelint src/**/*.scss --fix"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com-work:appuntos/fullstack-challenge.git"
    },
    "author": "John Falc√≥n for ReWorth",
    "license": "ISC",
    "dependencies": {
        "@babel/runtime": "^7.10.1",
        "@material-ui/core": "^4.11.3",
        "axios": "^0.21.1",
        "babel-plugin-auto-import": "^1.0.5",
        "eslint-config-standard-jsx": "^8.1.0",
        "loglevel": "^1.6.8",
        "parcel": "^1.12.4",
        "parcel-plugin-less-js-enabled": "^1.0.2",
        "postcss-modules": "^2.0.0",
        "preact": "^10.4.4",
        "preval.macro": "^5.0.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "recharts": "^1.8.5",
        "stylelint-scss": "^3.17.1"
    },
    "devDependencies": {
        "@babel/core": "^7.5.5",
        "@babel/plugin-transform-modules-commonjs": "^7.9.0",
        "@babel/preset-env": "^7.10.4",
        "babel-eslint": "^10.1.0",
        "babel-jest": "^26.0.0",
        "babel-plugin-auto-import": "^1.0.5",
        "babel-plugin-import": "^1.13.0",
        "babel-plugin-lodash": "^3.3.4",
        "babel-plugin-macros": "^2.8.0",
        "babel-plugin-ramda": "^2.0.0",
        "babel-plugin-recharts": "^1.2.1",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.7.0",
        "babel-preset-nano-react-app": "^0.1.0",
        "cypress": "^4.9.0",
        "eslint": "^7.3.1",
        "eslint-config-prettier": "^6.11.0",
        "eslint-config-standard": "^14.1.1",
        "eslint-import-resolver-alias": "^1.1.2",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jsx-a11y": "^6.3.1",
